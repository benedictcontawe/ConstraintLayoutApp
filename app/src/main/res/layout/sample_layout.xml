<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:id="@+id/itemContainer"
    android:importantForAccessibility="no"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end|top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/normalContainer"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#00000000"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="32dp"
            android:focusable="false"
            style="@style/CustomTitleTextStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/normalRecyclerView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layoutManager="com.example.constraintlayoutapp.CustomLinearLayoutManager"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expandedContainer"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:focusable="true"
        android:background="#202020"
        android:defaultFocusHighlightEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/descriptionContainer"
            app:layout_constraintVertical_chainStyle="packed">

            <TextView
                android:id="@+id/expandedTitle"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                style="@style/CustomTitleExpandedTextStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/expandedRecyclerViewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/expandedTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/expandedTitle">

                <ImageView
                    android:id="@+id/expandedArrowLeft"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_spiner_left"
                    android:scaleType="centerInside"
                    android:contentDescription="@null" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/expandedRecyclerView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    app:layoutManager="com.example.constraintlayoutapp.CustomLinearLayoutManager" />

                <ImageView
                    android:id="@+id/expandedArrowRight"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_spiner_right"
                    android:scaleType="centerInside"
                    android:contentDescription="@null" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/descriptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingBottom="18dp"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toBottomOf="@id/contentsContainer"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/description"
                style="@style/CustomDescriptionTextStyle"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                android:text="[Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.]"
                app:layout_constraintEnd_toStartOf="@id/descriptionImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/descriptionImage"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/color"
                app:layout_constraintTop_toTopOf="@id/description"
                app:layout_constraintStart_toEndOf="@id/description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>