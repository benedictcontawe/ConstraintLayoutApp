            <!--region Vertical Guide lines-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03"
                tools:ignore="DuplicateIds" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"
                tools:ignore="DuplicateIds" />
            <!--endregion-->
            <!--region Horizontal Guidlines-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.10"
                tools:ignore="DuplicateIds" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.90"
                tools:ignore="DuplicateIds" />
            <!--endregion-->
            <!--endregion-->

            <Space
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/constraint_guideline_top"
                app:layout_constraintStart_toStartOf="@id/constraint_guideline_start"
                app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_bottom"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="gone"
                android:id="@+id/iv_facebook_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_facebook"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/constraint_guideline_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_bottom"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawablePadding="@dimen/drawable_padding"
                android:drawableStart="@drawable/ic_facebook"
                android:text="Log in with Facebook"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/auto_size_min_text_size"
                app:autoSizeMaxTextSize="@dimen/auto_size_max_text_size"
                app:autoSizeStepGranularity="@dimen/auto_size_step_granularity"
                app:layout_constraintTop_toTopOf="@id/constraint_guideline_top"
                app:layout_constraintStart_toStartOf="@id/constraint_guideline_start"
                app:layout_constraintEnd_toEndOf="@id/constraint_guideline_end"
                app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_bottom" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_need_an_account"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Need an account?"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="@dimen/auto_size_min_text_size"
        app:autoSizeMaxTextSize="@dimen/auto_size_max_text_size"
        app:autoSizeStepGranularity="@dimen/auto_size_step_granularity"
        app:layout_constraintTop_toTopOf="@id/constraint_guideline_horizontal_need_an_account_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_horizontal_need_an_account_bottom"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_sign_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/light_blue_sign_up"
        app:cardCornerRadius="@dimen/card_view_radius"
        app:cardElevation="@dimen/cardElevation"
        app:cardMaxElevation="@dimen/cardMaxElevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:layout_constraintTop_toTopOf="@id/constraint_guideline_horizontal_sign_up_top"
        app:layout_constraintStart_toStartOf="@id/constraint_guideline_vertical_35"
        app:layout_constraintEnd_toEndOf="@id/constraint_guideline_vertical_65"
        app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_horizontal_sign_up_bottom">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--region Guide lines-->
            <!--region Vertical Guide lines-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03"
                tools:ignore="DuplicateIds" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"
                tools:ignore="DuplicateIds" />
            <!--endregion-->
            <!--region Horizontal Guidlines-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05"
                tools:ignore="DuplicateIds" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/constraint_guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.80"
                tools:ignore="DuplicateIds" />
            <!--endregion-->
            <!--endregion-->

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign up"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/auto_size_min_text_size"
                app:autoSizeMaxTextSize="@dimen/auto_size_max_text_size"
                app:autoSizeStepGranularity="@dimen/auto_size_step_granularity"
                app:layout_constraintTop_toTopOf="@id/constraint_guideline_top"
                app:layout_constraintStart_toStartOf="@id/constraint_guideline_start"
                app:layout_constraintEnd_toEndOf="@id/constraint_guideline_end"
                app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_bottom"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <!--endregion-->
</androidx.constraintlayout.widget.ConstraintLayout>