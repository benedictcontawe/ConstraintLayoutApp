<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_with_aura_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/image_view_north"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="90dp"/>

    <ImageView
        android:id="@+id/image_view_north_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="90dp"/>

    <ImageView
        android:id="@+id/image_view_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="90dp"/>

    <ImageView
        android:id="@+id/image_view_south_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="90dp"/>

    <ImageView
        android:id="@+id/image_view_south"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="90dp"/>

    <ImageView
        android:id="@+id/image_view_south_west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="90dp"/>

    <ImageView
        android:id="@+id/image_view_west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="90dp"/>

    <ImageView
        android:id="@+id/image_view_north_west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle_blue"
        app:layout_constraintCircle="@id/image_view_center"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="90dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>